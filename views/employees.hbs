<div class="row">
 <div class="col-md-12">
 <h2>Employees<a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a></h2>
 <hr />
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Employees Num</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Manager ID</th>
                    <th>Status</th>
                    <th>Department</th>
                    <th>Hire On</th>
                </tr>
            </thead>
            <tbody>
                {{#each employees}} {{!-- Employees --}}
                <tr>
                    <td>{{this.employeeNum}}</td>
                    <td>
                        <a href="/employee/{{this.employeeNum}}">{{this.firstName}} {{this.lastName}}</a>
                    </td>
                    <td>
                        <a href="mailto:{{this.email}}">{{this.email}}</a>
                    </td>
                    <td>
                        {{this.addressStreet}}, {{this.addressCity}},
                        {{this.addressState}}, {{this.addressPostal}}
                    </td>
                    <td>
                        <a href="/employees?manager={{this.employeeManagerNum}}">{{this.employeeManagerNum}}</a>
                    </td>
                    <td>
                        <a href="/employees?status={{this.status}}">{{this.status}}</a>
                    </td>
                    <td>
                        <a href="/employees?department={{this.department}}">{{this.department}}</a>
                    </td>
                    <td>
                        {{this.hireDate}}
                    </td>
                    <td>
                         <a href="/employees/delete/{{employeeNum}}" class="btn btn-danger"> Remove </a> 
                    </td>
                    {{{else}}}
                    <div class=""col-mid-12 text-center">
                        <strong>{{message}}</strong>
                    </div>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    </div>
 </div>
</div>